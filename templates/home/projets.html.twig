{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
<button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-arrow-up"></i></button>
<div class="container text-center">
    <div class="row project-card">
        <!-- Card Projects -->
        {% for project in projects %}
        <div class="col-md-6 col-md-offset-3 mt-4">
            <div class="card">
                <div class="card-image">
                    <img class="img-responsive" style="width: 26rem;" src="{{ project.img[0].url }}"
                        alt="Mon projet {{project.name}}">
                    <h5 class="card-title mb-3">{{ project.name }}</h5>
                </div>
                <div class="card-content">
                    <p class="card-description">{{ project.description }}</p>
                </div>
                <hr />

                <div class="card-action">
                    <div class="container-tech">
                        <p class="tech"><span class="text-color-two">T</span>ECHNOLOGIES :</p>
                        {% for i in 0..project.techno|length-1 %}
                        <p class="icon-tech">{{project.techno[i].imgUrl|raw}}</p>
                        {% endfor %}
                    </div>
                    <div class="modal-footer">
                        {% if (project.url) %}
                        <a class="link-bottom" href="{{project.url}}" target="_blank"><i
                                class="fas fa-globe fa-3x"></i></a>
                        {% endif %}

                        {% if (project.repositoryGit) %}
                        <a class="link-bottom" href="{{project.repositoryGit}}" target="_blank"><i
                                class="fab fa-github-alt fa-3x"></i></a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="mt-4 see-more">
                <button data-toggle="modal" data-target="#modal1-{{project.id}}" class="bubbly-button">En savoir <i
                        class="fas fa-plus-circle"></i></button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modal1-{{project.id}}" tabindex="-1" role="dialog"
            aria-labelledby="myModalLabel-{{project.id}}" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content modal-content-one">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">{{project.name}}</h4>
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span
                                class="sr-only">Close</span></button>
                    </div>
                    <div class="modal-body">
                        <p class="card-content card-description" style="font-size: 20px;">{{ project.description }}</p>
                        <hr />
                        <p class="tech" style="font-size: 30px;"><span class="text-color-two">T</span>ECHNOLOGIES :</p>
                        {% for i in 0..project.techno|length-1 %}
                        <p class="icon-tech">{{project.techno[i].imgUrl|raw}}</p>
                        {% endfor %}
                        <hr />
                        <p class="tech mb-3" style="font-size: 30px;"><span class="text-color-two">S</span>ITE WEB <span
                                class="text-color-two">G</span>ALLERIE :</p>
                        {% for i in 0..project.img|length-1 %}
                        <div class="row row-modal">
                            <div class="col-sm-9">
                                <div class="card-gallery">
                                    <div class="card-body">
                                        <img src="{{ project.img[i].url}}" style="width: 18rem;" alt="{{project.name}}"
                                            class="d-block w-100">
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}